@using Sibers.Core.Entities
@model List<User>

<div class="container mt-5">
    <h2 class="mb-4 text-center">User List</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered shadow-sm align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Middle Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Projects</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.MiddleName</td>
                        <td>@user.Email</td>
                        <td>
                            <span class="badge bg-primary">@(user.Projects?.Count ?? 0)</span>
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Details", "Users", new { id = user.Id })" class="btn btn-outline-info btn-sm me-2">
                                Details
                            </a>
                            <a href="@Url.Action("Edit", "Users", new { id = user.Id })" class="btn btn-outline-warning btn-sm">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>