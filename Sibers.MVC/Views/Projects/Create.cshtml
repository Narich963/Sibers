@using Sibers.Core.Enums
@using Sibers.MVC.ViewModels.Projects
@model ProjectViewModel

<h2>Create Project</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CustomerCompanyName" class="form-label"></label>
        <input asp-for="CustomerCompanyName" class="form-control" />
        <span asp-validation-for="CustomerCompanyName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ExecutorCompanyName" class="form-label"></label>
        <input asp-for="ExecutorCompanyName" class="form-control" />
        <span asp-validation-for="ExecutorCompanyName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Priority" class="form-label"></label>
        <select asp-for="Priority" asp-items="Html.GetEnumSelectList<Priority>()" class="form-select"></select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>